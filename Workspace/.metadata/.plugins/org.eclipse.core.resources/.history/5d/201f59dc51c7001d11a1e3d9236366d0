package com.skillstorm.general2;

public class Master extends Player{
	
	public Master() {}
	
	public Master(String name, int age, String type,
			double level, int hp, String weapon) {
		super(name, age, type, level, hp, weapon);
	}
	

	
	@Override
	public void force() {
		System.out.println(getName() + " spun around with his " + getWeapon());
	}
	
	@Override
	public void quote() {
		System.out.println("\"Do or do not. There is no try.\"");
	}
	
	public void quote2() {
		System.out.println("Size matters not. Look at me.\n"
				+ "Judge me by my size, do you? Hmm? Hmm.");
	}
	
	public void quote3() {
		System.out.println("Control, control, you must learn control.");
	}
	
	public void badquote() {
		System.out.println("\"When you look at the dark side, careful you must be.\n"
				+ "For the dark side looks back\"");
	}
	
	public void goodChoice() {
		Logic.printHeading(getName());
		System.out.println("Your wise and strategic, current level " + getLevel());
	}
	
	public void badChoice() {
		System.out.println("That was not a very good strategy even with your expertise,\n"
				+ "current level " + getLevel());
	}
	
	public void strike() {
		System.out.println("You took a hit! Current HP level, " + getHP());
	}
	
	

}
