package com.skillstorm.general2;

import java.util.Scanner;

public class TextAdventure {
	
	Scanner in = new Scanner(System.in);
	String playerName;
	Player magician;
	String weapon;
	String response;
	int score = 0;
	int choice;
	String easterEgg = "Easter Egg";
	
	public static void main(String[] args) {
		
		
		Story.printHeading("Testing helper methods");
		Story.anythingToContinue();
		Story.clearConsole();
		int input = Story.readInt("Enter 1, 2, or 3", 3);
		System.out.println("You choose number " + input);
		
	//	Story.storyline();
		
		TextAdventure game = new TextAdventure();
		
	//	game.storyLine();
		
		
	}
	
	public void storyLine() {
		System.out.println("*******************************\n"
				+ "In a galaxy far far away...\n"
				+ "*************************************\n"
				+ "In a dungeon where all your fears become reality, where one mistake can cause you to perish.\n"
				+ "Run through it quickly or you may not get out.  5 chances is your limit.  \n"
				+ "Your one mission:  Find the \"Easter Egg\" to escape.\n");
		
		nameSetup();
	}
	
	public void nameSetup() {
		Scanner in = new Scanner(System.in);
		
		System.out.println("Please enter your name if you dare:\n");
		playerName = in.nextLine();
		System.out.println("\nWelcome " + playerName + "!\n" 
				+ "**************************");
		
		characterSetup();
		}
		
	
//		
//
//		System.out.println("\nNice " + playerName + "! \nYou choose " + magician +". \n"
//				+ "--------------------------------\n");
	
	public void characterSetup() {
		Scanner in = new Scanner(System.in);
		Wizard shaka = new Wizard("Shaka", 25, 10, "Spell Caster", 25, 10, "Quantum Hammer");
		Sorceror darke = new Sorceror("Darke", 45, 15, "Illusion", 30, 10, "Necro staff");
		Witch draco = new Witch("Draco", 32, 20, "Transmutation", 35, 10, "Hattori Ring" );
		
		
		String[] option = {"1. Shaka", "2. Darke", "3. Draco"};
		System.out.println();
		for(int i = 0; i < option.length; i++) {
			System.out.println(option[i]);
		}
		
		System.out.println();
		choice = in.nextInt();
		if (choice == 1) {
			shaka.show();
		} else if(choice == 2) {
			darke.show();;
		} else if (choice == 3) {
			draco.show();
		} else {
			System.out.println("You did not enter a number correctly please try again");
			characterSetup();
	}
	}
}
