package com.skillstorm.general2;

import java.util.Scanner;

public class Logic {
	static Scanner scanner = new Scanner(System.in);
	
	public static boolean isRunning;
	
	public static int place = 0, act = 1;
	public static String[] places = {"Door", "Old Lady", "ALIENS", "BREATHER", "Treasure Room"};
	
	public static int readInt(String prompt, int userChoices) {
		int input;
		
		do {
			System.out.println(prompt);
			try {
				input = Integer.parseInt(scanner.next());
				}catch(Exception e) {
					input = -1;
					System.out.println("Please enter an integer");
				}
		}while(input < 1 || input > userChoices);
		return input;
			
		
	}
	
	public static void clearConsole() {
		for (int i = 0; i < 100; i++)
			System.out.println();
	}
	
	public static void lineSeperator(int n) {
		for(int i = 0; i < n; i++)
			System.out.print("-");
		System.out.println();
	}
	
	public static void printHeading(String title) {
		lineSeperator(30);
		System.out.println(title);
		lineSeperator(30);
	}
	
	public static void anythingContinue() {
		System.out.println("\nEnter anything to continue...");
		scanner.next();
	}
	
	
	
	public static void storyline() {
		
		boolean nameSet = false;
		String name;
		
		lineSeperator(40);
		lineSeperator(30);
		System.out.println("In a galaxy far far away...");
		System.out.println("Let's see if I did this right!");
		lineSeperator(30);
		lineSeperator(40);
		anythingContinue();
		
		do {
			clearConsole();
			printHeading("What's your name?");
			name = scanner.next();
			clearConsole();
			printHeading("Your name is " + name + ".\nIs that correct?");
			System.out.println("(1) Yes!");
			System.out.println("(2) No, I want to change my name.");
			int input = readInt("-> ", 2);
			if(input == 1)
				nameSet = true;
		}while(!nameSet);
		
		Scene.printIntro();
		
		characterInfo();
		
		Scene.door();
		Scene.oldLady();
		
		gameLoop();
		
		
		
	}
	
	public static void continueJourney() {
		
		
		
	}
	
	public static void printMenu() {
		clearConsole();
		printHeading(places[place]);
		System.out.println("Choose an action:");
		lineSeperator(20);
		System.out.println("(1) Continue on your journey");
		System.out.println("(2) Character Info");
		System.out.println("(3) Exit Game");
	}
	
	public static void gameLoop() {
		while(isRunning) {
			printMenu();
			int input = readInt("-> ", 3);
			if(input == 1) {
				continueJourney();
			} else if(input == 2) {
				characterInfo();
			} else
				isRunning = false;
		}
	}
	
	public static void characterInfo() {
		Master shaka = new Master("Shaka", 25, 10, "Spell Caster", 25, 10, "Quantum Hammer");
		Padawan darke = new Padawan("Darke", 45, 15, "Illusion", 30, 10, "Necro staff");
		Knight draco = new Knight("Draco", 32, 20, "Transmutation", 35, 10, "Hattori Ring" );
		clearConsole();
		printHeading("Character Info");
		shaka.status();
		darke.status();
		draco.status();
		
		anythingContinue();
	}

}
