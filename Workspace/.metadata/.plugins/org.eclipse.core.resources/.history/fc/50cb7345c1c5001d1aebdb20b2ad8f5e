package com.skillstorm.general2;

public class TextAdventure {
	
	public static void main(String[] args) {
		
		TextAdventure game = new TextAdventure();
		
		game.storyLine();
		
		
	}
	
	public void storyLine() {
		System.out.println("*******************************\n"
				+ "In a galaxy far far away...\r\n"
				+ "*************************************\n"
				+ "In a dungeon where all your fears become reality, where one mistake can cause you to perish.\n"
				+ "Run through it quickly or you may not get out.  5 chances is your limit.  \n"
				+ "Your one mission:  Find the \"Easter Egg\" to escape.\n");
	}
	
	public void defaultSetup() {
		
		Wizard shaka = new Wizard("Shaka", 25, 10, "Spell Caster", 25, 10, "Quantum Hammer");
		Sorceror darke = new Sorceror("Darke", 45, 15, "Illusion", 30, 10, "Necro staff");
		Witch draco = new Witch("Draco", 32, 20, "Transmutation", 35, 10, "Hattori Ring" );
	
	
		
	}

}
