package com.skillstorm.general2;

public class Player {
	
	private String name;
	private int age;
	private int strength;
	private String power;
	private double level;
	private int hp;
	private String weapon;
	
	public Player() {}
	
	public Player(String name, int age, int strength, String power,
			double level, int hp, String weapon) {
		this.name = name;
		this.age = age;
		this.strength = strength;
		this.power = power;
		this.level = level;
		this.hp = hp;
		this.weapon = weapon;
	}
	
	public void status() {
		Logic.printHeading(name + "\n" + "power: " + power +
				"\nlevel: " + level + "\nage: " + age + "\nstrength: " + strength + 
				"\nhp: " + hp + "\nweapon: " + weapon);
	}
	
	public void attack() {
		System.out.println(name + " attacked with his strength of " + strength);
	}
	
	public void speak() {
		
	}
	
	public void force() {
		
	}
	
	
	public String getName() {
		return this.name;
	}
	
	public void setName(String name) {
		this.name = name;
	}
	
	public double getAge() {
		return this.age;
	}
	
	public void setAge(int age) {
		this.age = age;
	}
	
	public int getStrength() {
		return this.strength;
	}
	
	public void setStrength(int strength) {
		this.strength = strength;
	}
	
	public String getPower() {
		return this.power;
	}
	
	public void setPower(String power) {
		this.power = power;
	}
	
	public double getLevel() {
		return this.level;
	}
	
	public void setLevel(double level) {
		this.level = level;
	}
	
	public double getHP() {
		return this.hp;
	}
	
	public void setHP(int hp) {
		this.hp = hp;
	}
	
	public String getWeapon() {
		return this.weapon;
	}
	
	public void setWeapon(String weapon) {
		this.weapon = weapon;
	}

}
