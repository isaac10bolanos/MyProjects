	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		String playerName;
		
		
		System.out.println("*************************\r\n"
				+ "In a galaxy far far away...\r\n"
				+ "**********************************\r\n"
				+ "In a dungeon where all your fears become reality, where one mistake can cause you to perish.\r\n"
				+ "Run through it quickly or you may not get out.  5 chances is your limit.  \r\n"
				+ "Your one mission:  Find the \"Easter Egg\" to escape.\r\n");
		
		System.out.println("Please enter your name if you dare!:\r\n");
		playerName = in.nextLine();
		System.out.println("\nAlright " + playerName + " let's get started!\n");
				
		Project1 game = new Project1();
		//game.playerSetup(in);
		game.doorChoice();
		//carPrompt(in);
		
		
		
	}
	
	public void doorChoice() {
		System.out.println("First obstacle:  There are 5 initial doors to begin your quest.  Which one to begin?\n");
		String door[] = {"1. Medieval type look", "2. Red door from Insidious", "3. Breakfast club door",
					 "4. Boo’s Monster Inc. door", "5. Regular door with number 237"};
		for(int i = 0; i < door.length; i++) {
			System.out.println(door[i]);
			choice = in.nextInt();
		
			if(choice==1) {
				System.out.println("What are you expecting?  Dungeons and Dragons?");
			}else if(choice==2) {
				System.out.println("Why just why, well it's your funeral!");
			}else if(choice==3) {
				System.out.println("Run away, don't mess with the bull!");
			}else if(choice==4) {
				System.out.println("Don’t worry there's no Randall in here");
			}
	}	
}
	
	
